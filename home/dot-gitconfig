	cm = "commit -a -m 'auto commit'"
	lg = "log --oneline --graph --decorate"
	st = "status"
	up = "!f() { git add .; git commit -a -m 'auto commit'; git fetch -a && git pull && git push; }; f"
	up = "!f() { git add .; git commit -a -m 'auto commit'; git fetch -a && git pull && git push; }; f"

[branch]
	autoSetupMerge = true

